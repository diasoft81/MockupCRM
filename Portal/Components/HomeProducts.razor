
@using System.Net.Http.Json

<section class="recent-section">
    <div class="container">
        <h2 class="section-title">Product List</h2>
        <div class="row">
            @foreach (var card in VisibleCards)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@card.Image" class="card-img-top" alt="@card.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@card.Title</h5>
                            <p class="card-text">@card.Description</p>
                        </div>
                        <div class="card-footer text-muted">
                            Quantity: @card.Quantity
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (VisibleCards.Count < AllCards.Count)
        {
            <div class="text-center mt-3">
                <button class="button" @onclick="LoadMore">Load More</button>
            </div>
        }
    </div>
</section>

@code {
    private List<CardModel> AllCards = new();
    private List<CardModel> VisibleCards = new();
    private int cardsPerPage = 6;
    private int currentPage = 0;

    protected override async Task OnInitializedAsync()
    {
        var cards = await Http.GetFromJsonAsync<List<CardModel>>("/data/cards_products.json");
        if (cards != null)
        {
            AllCards = cards;
            LoadMore(); // Initial load
        }
    }

    private void LoadMore()
    {
        int nextCount = (currentPage + 1) * cardsPerPage;
        VisibleCards = AllCards.Take(nextCount).ToList();
        currentPage++;
    }

    public class CardModel
    {
        public int Id { get; set; }
        public string Title { get; set; }
        public string Image { get; set; }
        public string Description { get; set; }
        public int Quantity { get; set; }
        public int Views { get; set; }
    }
}

<style>
.recent-section {
    padding: 60px 0;
}
.section-title {
    text-align: center;
    font-size: 2rem;
    color: #004080;
    margin-bottom: 30px;
}
.button {
    background-color: #004080;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
}
.button:hover {
    background-color: #0066cc;
}
</style>
