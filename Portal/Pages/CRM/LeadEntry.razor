@page "/leadentry"
@layout WebLayout

<div class="container-fluid px-0">
    <div class="card shadow-sm">
        <div class="card-body">
            <form>
                <fieldset class="mb-4">
                    <legend>Customer Information</legend>
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Customer Name</label>
                            <input type="text" class="form-control" placeholder="Enter Customer Name">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Contact Person</label>
                            <input type="text" class="form-control" placeholder="Enter PIC Name">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="Enter Email">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" placeholder="Enter Phone Number">
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Lead Details</legend>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Lead Status</label>
                            <select class="form-select">
                                <option>New</option>
                                <option>Contacted</option>
                                <option>Qualified</option>
                                <option>Disqualified</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Lead Source</label>
                            <select class="form-select">
                                <option>Visit</option>
                                <option>Pameran</option>
                                <option>Website</option>
                                <option>Telepon Masuk</option>
                                <option>Referensi</option>
                                <option>Cold Call</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Industry Segment</label>
                            <select class="form-select">
                                <option>EV Fleet</option>
                                <option>EV Retail</option>
                                <option>Logistics</option>
                                <option>Home Charging</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Customer Category</label>
                            <select class="form-select">
                                <option>Government</option>
                                <option>Corporate</option>
                                <option>Retail</option>
                                <option>Dealer</option>
                                <option>Other</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Needs</label>
                        <textarea class="form-control" rows="3" placeholder="Describe customer needs related to EV Charging"></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Additional Notes</label>
                        <textarea class="form-control" rows="3" placeholder="Any extra information or context"></textarea>
                    </div>
                </fieldset>

                <button type="submit" class="btn btn-primary">Save Lead</button>
            </form>
        </div>
    </div>
</div>
